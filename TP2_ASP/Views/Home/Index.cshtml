@model IEnumerable<TP2_ASP.Models.SendViewModels.SendViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Espace.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h1>
                    StarFax, la #1 dans l'envoi de fax intergalactique.
                </h1>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Espace2.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h1>
                    StarFax, la #1 dans l'envoi de fax intergalactique.
                </h1>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Espace3.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h1>
                    StarFax, la #1 dans l'envoi de fax intergalactique.
                </h1>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- Page Content -->
@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-4">
            <h2>Achat</h2>
            <ul>
                <li>Il est possible d'acheter des télécopies directement sur notre site grâce à notre nouveau système d'achat en ligne</li>
                <li>Vous avez le choix entre 1, 10 ou 100 télécopies.</li>
                <li><a asp-area="" asp-controller="Paiement" asp-action="Index">Acheter ici</a></li>
            </ul>
        </div>
        <div class="col-md-4">
            <h2>Envoi</h2>
            <ul>
                <li>Il est maintenant possible d'envoyer dans images et des pdf</li>
                <li>Vous pouvez même télécharger les télécopies que vous avez précédement envoyer</li>
            </ul>
        </div>
        <div class="col-md-4">
            <h2>Historique</h2>
            <ul>
                <li>Il est maintenant possible de voir votre historique d'envoi</li>
                <li>Si un envoi de fax sais mal passer, il est possible de réessayer mauellement</li>
                <li>Lorsque vous êtes connecté, il est possible de voir les 5 derniers envoi que vous avez effectuer</li>
            </ul>
        </div>
    </div>

    <br>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Nom d'utilisateur
                </th>
                <th>
                    Nombre de télécopie
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @User.Identity.Name
                </td>
                <td>
                    @Model.Count()
                </td>
            </tr>
        </tbody>
    </table>

    <br />

    <h2>5 dernières télécopies</h2>
    <div class="col-md-8 col-8">
        <div class="row">
            @foreach (var telecopie in Model.TakeLast(5))
            {
                <ul>
                    <li>Envoyé à @telecopie.Nom</li>
                    @telecopie.Fichier
                </ul>
            }
        </div>
    </div>

}
else
{
    <div class="row">
        <div class="col-md-4">
            <h2>Achat</h2>
            <ul>
                <li>Il est possible d'acheter des télécopies directement sur notre site grâce à notre nouveau système d'achat en ligne</li>
                <li>Vous avez le choix entre 1, 10 ou 100 télécopies.</li>
                <li><a asp-area="" asp-controller="Paiement" asp-action="Index">Acheter ici</a></li>
            </ul>
        </div>
        <div class="col-md-4">
            <h2>Envoi</h2>
            <ul>
                <li>Il est maintenant possible d'envoyer dans images et des pdf</li>
                <li>Vous pouvez même télécharger les télécopies que vous avez précédement envoyer</li>
            </ul>
        </div>
        <div class="col-md-4">
            <h2>Historique</h2>
            <ul>
                <li>Il est maintenant possible de voir votre historique d'envoi</li>
                <li>Si un envoi de fax sais mal passer, il est possible de réessayer mauellement</li>
                <li>Lorsque vous êtes connecté, il est possible de voir les 5 derniers envoi que vous avez effectuer</li>
            </ul>
        </div>
    </div>
}
